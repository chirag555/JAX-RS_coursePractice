package webapp.entity;

import java.util.Date;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.PrePersist;
import javax.persistence.PreRemove;
import javax.persistence.PreUpdate;
import javax.persistence.Table;
import lombok.AccessLevel;
import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import webapp.config.Auditable;

@Getter(AccessLevel.PUBLIC)
@Setter(AccessLevel.PUBLIC)
@NoArgsConstructor
@AllArgsConstructor
@Entity
@Table(name = "posts")

public class Post extends Auditable<String> {

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Column(name = "id")
	int postId;
	@Column(name = "title")
	String title;
	@Column(name = "body")
	String body;
	@Column(name = "description")
	String description;
	public void add() {
		//this.createdDate
	}
	
	/*
	 * @PrePersist
	 * 
	 * @PreUpdate public void udpateUrlFriendlyName() { String computedFriendlyName
	 * = this.name.replaceAll("[^a-zA-Z0-9]+", "_").replaceAll("\\s+", "_")+ "__" +
	 * this.sportName.replaceAll("[^a-zA-Z0-9]+", "_") .replaceAll("\\s+", "_");
	 * this.urlFriendlyName = computedFriendlyName + "__" +
	 * this.urlFriendlyName.replaceAll(computedFriendlyName, ""); }`
	 */
	@PrePersist
	public void preInsert() {
		this.description=title+" "+body;
		this.lastModifiedDate=new Date();
		this.createdDate=new Date();
		System.out.println(lastModifiedDate+ "  "+createdDate);
	}
	
	@PreUpdate
	public void preUpdate() {
		
		this.lastModifiedDate=new Date();
	}
	@PreRemove
	public void onPreRemove() {
		System.out.println("delted Record");
	}


//from here
	public int getPostId() {
		return postId;
	}

	public void setPostId(int postId) {
		this.postId = postId;
	}

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public String getBody() {
		return body;
	}

	public void setBody(String body) {
		this.body = body;
	}

	public String getDescription() {
		return description;
	}

	public void setDescription(String description) {
		this.description = description;
	}
	
	
	//from here
	
	
	
	
	
	
	
	
	
}
